{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "dnd-main": {
      "development": {
        "local": 3000,
        "fallback": "dnd-main.vercel.app"
      }
    },
    "dnd-characters": {
      "development": {
        "local": 3001
      },
      "routing": [
        {
          "group": "characters",
          "paths": ["/characters", "/characters/:path*"]
        }
      ]
    },
    "dnd-shop": {
      "development": {
        "local": 3002
      },
      "routing": [
        {
          "group": "shop",
          "paths": ["/shop", "/shop/:path*"]
        }
      ]
    },
    "dnd-spells": {
      "development": {
        "local": 3003
      },
      "routing": [
        {
          "group": "spells",
          "paths": ["/spells", "/spells/:path*"]
        }
      ]
    }
  }
}
