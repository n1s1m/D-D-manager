{
  "extends": "../ts-config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["*.ts", "*.tsx", "components/**/*.ts", "components/**/*.tsx", "lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
